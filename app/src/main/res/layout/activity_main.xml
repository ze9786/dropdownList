<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#aeaeae"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/spinnerRelativeLayout"
        style="@style/SpinnerDropDownTheme"
        android:layout_width="91dp"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        android:visibility="gone">

        <ScrollView
            android:id="@+id/spinnerList_scrollView"
            style="@style/SpinnerDropDownTheme"
            android:layout_width="75dp"
            android:layout_height="159dp"
            android:layout_marginBottom="6dp"
            android:animateLayoutChanges="true"
            android:background="#00ffffff"
            android:scrollbarSize="3dp"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:id="@+id/spinnerLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </ScrollView>
    </RelativeLayout>

    <Button
            android:id="@+id/spinnerBtn"
            style="@style/SpinnerTheme"
            android:fontFamily="sans-serif-thin"
            android:layout_width="91dp"
            android:layout_height="47dp"
            android:layout_marginBottom="364dp"
            android:text="+86"/>

    <TextView
        android:id="@+id/triangleText"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:elevation="10dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:text="â–¼"
        android:textColor="#989898"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerBtn"
        app:layout_constraintEnd_toEndOf="@+id/spinnerBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/spinnerBtn"
        app:layout_constraintTop_toTopOf="@+id/spinnerBtn"
        app:layout_constraintVertical_bias="0.44" />


</RelativeLayout>